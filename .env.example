TELEGRAM_BOT_TOKEN=replace_with_bot_token
# Use negative id for groups/channels, e.g. -1001234567890
TELEGRAM_CHAT_ID=replace_with_chat_id
# SSH probe targets for blackbox (comma-separated).
# Format: IP:PORT or Friendly Name=IP:PORT
SSH_TARGETS=Netbird Main=100.124.161.192:22,Backup SSH=100.96.156.53:8022
# DNS server used by blackbox DNS probe (set to your router resolver on restrictive networks).
DNS_PROBE_TARGET=1.1.1.1:53
# Blackbox exporter address as seen by Prometheus.
# Default works in bridge mode; for Raspberry Pi host-network workaround use: host.docker.internal:9115
BLACKBOX_ADDRESS=blackbox:9115
# Optional: force a specific interface. Leave empty to auto-detect first non-loopback.
NETWORK_INTERFACE=

# Bind published ports to localhost by default.
# For NetBird-only access, set this to your NetBird IP (100.x.y.z).
MONITOR_BIND_ADDR=127.0.0.1
